{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,

    /* IMPORTANT: where Electron will look for the compiled files */
    "outDir": "dist-electron/electron",
    "rootDir": "."
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}
