{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,

    "composite": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["electron/**/*"]
}
