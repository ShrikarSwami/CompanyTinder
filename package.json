{
  "name": "companytinder",
  "version": "0.1.0",
  "private": true,
  "description": "Find companies, compose outreach, and send with Gmail.",
  "author": "Shrikar Swami",
  "type": "commonjs",
  "main": "dist-electron/electron/main.js",

  "scripts": {
    "dev": "concurrently -k -n main,renderer,electron \"tsc -w -p tsconfig.node.json\" \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.node.json",
    "build": "rimraf dist-electron dist && pnpm build:main && pnpm build:renderer",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -m"
  },

  "build": {
    "appId": "com.companytinder.app",
    "productName": "CompanyTinder",
    "files": [
      "dist/**",
      "dist-electron/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "directories": {
      "buildResources": "build"
    }
  }
}
