{
  "name": "companytinder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  {
    "scripts": {
      "dev:main": "tsc -p tsconfig.node.json --watch",
      "dev:renderer": "vite",
      "dev:electron": "wait-on tcp:5173 && electron .",
      "dev": "concurrently -k \"pnpm:dev:*\"",
      "build": "electron-builder -mwl"
    },
    "main": "dist-electron/main.js"
  }

  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^4.0.1",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "ai.shrikar.companytinder",
    "productName": "CompanyTinder",
    "files": [
      "dist/**",
      "dist-electron/**",
      "node_modules/**",
      "assets/**",
      "LICENSE",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    }
  }
}
